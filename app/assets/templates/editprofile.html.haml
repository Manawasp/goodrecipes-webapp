%div.panel-content.margin-top-20{"layout-fill" => "", layout: "column"}
  %section.demo-container.md-whiteframe-z1
    %md-toolbar.demo-toolbar.md-default-theme{style: 'background-color: #eee;color:#666'}
      .md-toolbar-tools
        %span{flex: 100, style: 'position:absolute;margin-top:20px'}
          Your profile
        %md-button.md-primary.md-fab.md-fab-top-right{'ng-show'=> 'data.send == false', style: 'background:#4CAF50;margin-right:-10px;margin-top:-17px;width:40px;height:40px', "aria-label" => "", "ng-click" => "update_user()"}
          %span.glyphicon.glyphicon-ok
        %span{'ng-show'=> 'data.send == true', flex: 100,          style: "width:100%;position:absolute;margin-top:54px;margin-left:-10px"}
          %md-progress-linear.md-accent{"md-mode" => "indeterminate"}
        %span{:flex => "100"}
          %div{layout: "row", "layout-align" => "center", style: 'margin-top:-60px;'}
            %button.md-fab.md-accent.md-button.md-default-theme{"aria-label" => "refresh", style:"position:absolute;margin-top:60px"}
              %img.avatar{src: "{{user.avatar}}"}
              %md-tooltip.font-11
                upload
    %div.demo-content
      %md-content{layout: "row"}
        %div{flex: '20'}
          %h4{style: 'margin-top:30px;margin-left:15px;margin-bottom:30px'} Informations
        %div{flex: '80', :layout => "column"}
          %form{:style => "padding: 20px;"}
            %div{layout: "row", "ng-show" => "data.error != ''"}
              .alert.alert-danger{flex: '100', role: 'alert', style: 'margin-top: 20px'}
                %span.glyphicon.glyphicon-exclamation-sign{"aria-hidden" => "true"} 
                {{data.error}}
            %div{layout: "row"}
              %div{flex: '50'}
                %md-text-float{:label => "Email adress", "ng-model" => "user.email"}
              %div{flex: '50'}
                %md-text-float{:label => "Pseudo", "ng-model" => "user.pseudo"}
            %div{layout: "row"}
              %div{flex: '50'}
                %md-text-float{:label => "First name", "ng-model" => "user.firstname"}
              %div{flex: '50'}
                %md-text-float{:label => "Last name", "ng-model" => "user.lastname"}
            %div{layout: "row"}
              %div{flex: '50'}
                %md-text-float{:label => "Password", "ng-model" => "user.password", "ng-type" => "number"}
              %div{flex: '50'}
                %span{"ng-repeat" => "access in user.access"}
                  %span.label.label-info {{access}}
      %md-content.text-right{layout: "row", style: 'padding:10px'}
        %md-button{style: 'right:0'} Validate
%div.panel-content.margin-top-20{"layout-fill" => "", layout: "column"}
  %section.demo-container.md-whiteframe-z1
    %div
      %md-content{style: 'border-top:1px solid #ddd'}
        %div{layout: "row"}
          %div{flex: '20'}
            %h4{style: 'margin-top:30px;margin-left:15px;margin-bottom:30px'}
              Followers
              %span.light-silver.margin-left-5.font-14
                {{followers.length}}
          %div{flex: '70'}
            %div
              %div{layout: "row", "layout-align" =>"start start"}
                %div{"ng-repeat" => "follower in followers", style: 'padding:10px 15px'}
                  %div{layout: "column","layout-align" =>"center center"}
                    %div{style: 'margin-top:10px'}
                      %a{href: '\#users/{{follower.id}}'}
                        %button.md-fab.md-accent.md-button.md-default-theme{"aria-label" => "refresh", style: 'width:40px;height:40px'}
                          %img.avatar{src: "{{follower.avatar}}", style: 'width:40px;height:40px'}
                    %div{style: 'font-size:11px;margin-top:5px'}
                      {{follower.pseudo}}
      %md-content{style: 'border-top:1px solid #ddd'}
        %div{layout: "row"}
          %div{flex: '20'}
            %h4{style: 'margin-top:30px;margin-left:15px;margin-bottom:30px'}
              Followeds 
              %span.light-silver.margin-left-5.font-14
                {{followeds.length}}
          %div{flex: '70'}
            %div
              %div{layout: "row", "layout-align" =>"start start"}
                %div{"ng-repeat" => "followed in followeds", style: 'padding:10px 15px'}
                  %div{layout: "column","layout-align" =>"center center"}
                    %div{style: 'margin-top:10px'}
                      %a{href: '\#users/{{followed.id}}'}
                        %button.md-fab.md-accent.md-button.md-default-theme{"aria-label" => "refresh", style: 'width:40px;height:40px'}
                          %img.avatar{src: "{{followed.avatar}}", style: 'width:40px;height:40px'}
                    %div{style: 'font-size:11px;margin-top:5px'}
                      {{followed.pseudo}}