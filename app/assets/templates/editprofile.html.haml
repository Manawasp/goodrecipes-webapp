%div{layout: "row", "layout-align" => "space-between center", style: 'max-width:1140px'}
  %div.print-title.margin-left-20.font-24.roboto.light.margin-top-15.margin-bottom-20
    EDIT PROFILE
  %div
%div{layout: "column", style: 'max-width:1140px'}
  %div{"ng-show" => "data.error != ''"}
    .alert.alert-danger{role: 'alert', style: 'margin-top: 20px'}
      %i.fa.fa-exclamation-triangle
      {{data.error}}
  %div
    %md-content.fileUpload.md-whiteframe-z1.ingredient-windows-120.cursor.text-center{style: "background-image: url('{{show_picture()}}')"}
      %input.upload{type: "file", "ng-model" => 'upload.avatarPict', "base-sixty-four-input" => "", style: 'height: 400px;width:100%;'}
  %div.margin-left-10.margin-right-10.margin-top-10{layout: "row", "layout-wrap" => ""}
    %md-input-container.padding-right-20{flex: '50'}
      %label.font-18 Email adress
      %input{"ng-model" => "user.email"}
    %md-input-container.padding-right-20{flex: '50'}
      %label.font-18 Pseudo
      %input{"ng-model" => "user.pseudo"}
    %md-input-container.padding-right-20{flex: '50'}
      %label.font-18 First name
      %input{"ng-model" => "user.firstname"}
    %md-input-container.padding-right-20{flex: '50'}
      %label.font-18 Last name
      %input{"ng-model" => "user.lastname"}
    %md-input-container.padding-right-20{flex: '50'}
      %label.font-18 Password
      %input{"ng-model" => "user.password", "ng-type" => "number"}
  %div.margin-top-15
    %md-button.md-primary.padding-right-20{'ng-click' => 'update_user()', style: "float:right;background-color:#4CAF50;color:white;"}
      %span.font-16{style: 'line-height:16px;'}
        %i.fa.fa-check.margin-right-10.margin-left-10
        valider
    %md-button.md-warn.padding-right-20{"ng-click" => "logout()", style: 'border:1px solid #ED747E;color:#ED747E'}
      %i.fa.fa-power-off.margin-right-10.margin-left-10
      Logout
