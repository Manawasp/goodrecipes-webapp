%div.panel-content{"layout-fill" => "", layout: "column"}
  %section.demo-container.md-whiteframe-z1
    %md-toolbar.demo-toolbar.md-default-theme{style: 'background-color: #eee;color:#666'}
      .md-toolbar-tools
        %span{flex: 100, style: 'position:absolute;margin-top:20px'}
          Edit your profile
        / %span{flex: 100, style: 'position:absolute;right:0;margin-top:10px;margin-right:10px'}
        /   %md-progress-circular{"md-mode" => "indeterminate", "md-diameter" => "30"}
        %md-button.md-primary.md-fab.md-fab-top-right{style: 'background:#4CAF50;margin-right:-10px;margin-top:-17px;width:40px;height:40px'}
          %span.glyphicon.glyphicon-ok
        %span{:flex => "100"}
          %div{layout: "row", "layout-align" => "center", style: 'margin-top:-70px;'}
            %button.md-fab.md-accent.md-button.md-default-theme{"aria-label" => "refresh", style:"position:absolute;margin-top:60px"}
              %img.avatar{src: "{{user.avatar}}"}
    %div.demo-content
      %div{:layout => "column"}
        %md-content
          %form{:style => "padding: 20px;"}
            %div{layout: "row", "layout-align" => "center"}
              %div{flex: '50', layout: "row", "layout-align" => "center"}
                %div
                  %md-text-float{:label => "Email adress", "ng-model" => "user.email"}
              %div{flex: '50', layout: "row", "layout-align" => "center"}
                %div
                  %md-text-float{:label => "Pseudo", "ng-model" => "user.pseudo"}
            %div{layout: "row", "layout-align" => "space-around center"}
              %div{flex: '50', layout: "row", "layout-align" => "center"}
                %div
                  %md-text-float{:label => "First name", "ng-model" => "user.firstname"}
              %div{flex: '50', layout: "row", "layout-align" => "center"}
                %div
                  %md-text-float{:label => "Last name", "ng-model" => "user.lastname"}
            .row{layout: "row", "layout-align" => "space-around center"}
              %div{flex: '50', layout: "row", "layout-align" => "center"}
                %div
                  %md-text-float{:label => "Password", "ng-model" => "user.password"}
              %div{flex: '50', layout: "row", "layout-align" => "center"}
                %div
                  %span{"ng-repeat" => "access in user.access"}
                    %span.label.label-info {{access}}
