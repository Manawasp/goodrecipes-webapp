.form-group{"ng-show" => "error != ''"}
  .alert.alert-danger{role: 'alert'}
    %span.glyphicon.glyphicon-exclamation-sign{"aria-hidden" => "true"} 
    {{error}}
.form-group
  %label{:for => "exampleInputPseudo"} Pseudo
  %input.form-control{:placeholder => "Enter pseudo", "ng-model" => "pseudo"}
.form-group
  %label{:for => "exampleInputEmail"} Email address
  %input.form-control{:placeholder => "Enter email", "ng-model" => "email"}
.form-group
  %label{:for => "exampleInputPassword"} Password
  %input.form-control{:placeholder => "Password", :type => "password", "ng-model" => "password"}
%div.text-right.margin-top-10
  %a.btn.btn-default.btn-sm.revert.fleft{href: '\#login'} Connection
  %button.btn.btn-success.btn-sm{"ng-click" => "send()"} Validate inscription