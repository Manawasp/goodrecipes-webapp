%md-content.margin-top-10{layout: "column", "layout-align" => "start start", flex: '100', "ng-class" => "{'md-whiteframe-z1' : show_search_advanced}"}
  %md-toolbar
    .md-toolbar-tools.no-padding.food-api-silver{tabindex: "0", flex: "100", layout: "column", style: 'background-color:#E3E4E6'}
      %div.margin-left-30.roboto.medium.cursor.font-24{style: 'color:#BB2743', "ng-click" => "show_search_advanced = !show_search_advanced", "ng-show" => "show_search_advanced"}
        Advanced recipe search
      %div{"ng-show" => "!show_search_advanced"}
        %md-button{'ng-click' => 'show_search_advanced = !show_search_advanced', style: 'color:#333'} Advanced recipe search
  %md-content{"ng-show" => "show_search_advanced", style: 'width:100%;padding:30px 20px 10px 20px;', layout: 'column'}
    %div
      %div{layout: "row"}
        %div{flex: '100'}
          %div
            %md-text-float.margin-left-20.fleft{:label => "Search ingredients", "ng-model" => "recipe.ingredients_describe[$index].title", style: 'display:inline-block;margin-top:0;'}
            %span.glyphicon.glyphicon-search.btn-search
          %div.margin-left-5
            %span{"ng-repeat" => "ig in ingredients"}
              %md-content.md-whiteframe-z1.ingredient-windows-64.cursor.text-center{style: 'background-image: url("{{ig.icon}}")'}
                %span.glyphicon.glyphicon-picture.font-24{style: 'color:#999;line-height:63px;', 'ng-show' => 'ig.icon != ""'}
                %span.glyphicon.glyphicon-picture.font-16{style: 'color:#999;line-height:32px;', 'ng-show' => '"" != ig.icon'}
    %div.step
      %div.step-header
        %div.font-18.roboto.bold.step-title.margin-top-15.margin-bottom-10 LABELS
        %div{layout: "row", "layout-wrap" => ""}
          %div{"ng-repeat" => "label in labels", flex: '20'}
            %md-checkbox{"ng-model"=>"label.c", "aria-label"=>"label.name"}
              {{label.name}}
        %div.font-18.roboto.bold.step-title.margin-top-30.margin-bottom-10 BANN LIST
        %div{layout: "row", "layout-wrap" => ""}
          %div{"ng-repeat" => "label in denied", flex: '20'}
            %md-checkbox.md-warn{"ng-model"=>"label.c", "aria-label"=>"label.name"}
              {{label.name}}
    %div.text-right.padding-top-10.padding-bottom-5.top-border
      %div{layout: "row", "layout-align" => "space-between center"}
        %div
          %md-button.md-primary{'ng-click' => 'show_search_advanced = !show_search_advanced', style: 'padding: 5px 15px;color:#BB2743'} CLOSE
        %div
          %md-button.md-primary.margin-left-10{style: 'padding: 5px 15px', "ng-click" => "validate()"} SEARCH
